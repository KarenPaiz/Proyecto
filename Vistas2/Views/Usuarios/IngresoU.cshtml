
@{
    ViewBag.Title = "IngresoU";
}
<h2>Nuevo usuario</h2>

@using (Html.BeginForm("IngresoU", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h2></h2>
    <h4>Ingrese su usuario</h4>
    <input type="text" name="Usuario">
    <h3></h3>
    <h4>Ingrese su nombre</h4>
    <input type="text" name="Nombre">
    <h3></h3>
    <h4>Ingrese una contraseña</h4>
    <input type="password" name="Password">
    <h3></h3>

    <a href="/Usuarios/Inicio">
        <input type="submit" value="Importar" class="btn btn-default" />
    </a>

}

